<div class= "columns">
   <div class="column"></div>
    <div class="column">
        <h1 class="title">Sign Up</h1>
        {{#if hasErrors }}
        <article class="message is-danger">
          <div class="message-body">
            {{#each messages }}
                <p>{{ this }}</p>
            {{/each}}
          </div>
        </article>
        {{/if}}
        <form method="post" action="/user/signup">
           <div class="field">
               <label class="label">First Name</label>
               <div class="control">
                   <input class="input" type="text" placeholder="First Name" name="firstName">
               </div>
           </div>
           
           <div class="field">
               <label class="label">Last Name</label>
               <div class="control">
                   <input class="input" type="text" placeholder="Last Name" name="lastName">
               </div>
           </div>
           
           <div class="field">
               <label class="label">Email</label>
               <div class="control">
                   <input class="input" type="email" placeholder="Email" name="email">
               </div>
           </div>
           
           <div class="field">
               <label class="label">Password</label>
               <div class="control">
                   <input class="input" type="password" placeholder="Don't use 'password'" name="password">
               </div>
           </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button class="button is-info is-pulled-right" type="submit">Submit</button>    
        </form>
        <br>
        
    </div>
    <div class="column"></div>
</div>